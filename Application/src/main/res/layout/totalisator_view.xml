<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:rowOrderPreserved="false" android:rowCount="3"
            android:columnCount="3">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/imageViewRight" android:layout_column="2" android:layout_row="1"
                   android:src="@drawable/tiny_back"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/imageViewBottom" android:layout_column="1" android:layout_row="2"
                   android:src="@drawable/tiny_back"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/imageViewTop" android:layout_column="1" android:layout_row="0"
                   android:src="@drawable/tiny_back"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewLeft" android:layout_column="0" android:layout_row="1"
                android:src="@drawable/tiny_back"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewCenter" android:layout_column="1" android:layout_row="1"
                android:src="@drawable/tiny_back"/>
    </GridLayout>
</LinearLayout>
