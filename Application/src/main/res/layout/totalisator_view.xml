<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Small Text"
            android:id="@+id/totalisator_view_offset_textview" android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="30dp" android:background="#ffffff"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:rowOrderPreserved="false" android:rowCount="3"
            android:columnCount="3" android:layout_gravity="center" android:layout_margin="0dp">

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/buttonRight" android:layout_column="2" android:layout_row="1"
                android:minWidth="2dp"
                android:background="@drawable/totalisator_btn_right" android:minHeight="2dp"
                android:gravity="center_vertical|center|center_horizontal" android:layout_gravity="center"
                android:layout_marginLeft="-12dp"/>


        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/buttonBottom" android:layout_column="1" android:layout_row="2"
                android:minWidth="2dp"
                android:background="@drawable/totalisator_btn_bottom" android:minHeight="2dp"
                android:gravity="center_vertical|center|center_horizontal" android:layout_gravity="center"
                android:layout_marginTop="-12dp"/>


        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/buttonTop" android:layout_column="1" android:layout_row="0"
                android:background="@drawable/totalisator_btn_top" android:minWidth="2dp" android:minHeight="2dp"
                android:layout_gravity="center" android:layout_marginBottom="-12dp"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLeft" android:layout_column="0" android:layout_row="1"
                android:minWidth="2dp"
                android:background="@drawable/totalisator_btn_left" android:minHeight="2dp"
                android:gravity="center_vertical|center|center_horizontal" android:layout_gravity="center"
                android:layout_marginRight="-12dp"/>


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/defaultImageViewTotalisator" android:layout_column="1" android:layout_row="1"
                    android:src="@drawable/tiny_back" android:minHeight="2dp" android:minWidth="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewTotalisator" android:layout_column="1" android:layout_row="1"
                    android:src="@drawable/tiny_back" android:minHeight="2dp" android:minWidth="2dp"
                    android:layout_gravity="center"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewClickArea" android:layout_column="1" android:layout_row="1"
                    android:src="@null" android:minHeight="40dp" android:minWidth="40dp"
                    android:layout_gravity="center" android:maxWidth="40dp" android:maxHeight="40dp"
            />
        </FrameLayout>

    </GridLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Small Text"
              android:id="@+id/totalisator_view_offset_textview2" android:layout_gravity="top|center_horizontal"
              android:layout_marginBottom="50dp"/>
</LinearLayout>
